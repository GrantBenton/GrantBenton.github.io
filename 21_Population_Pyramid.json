{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/GrantBenton/GrantBenton.github.io/refs/heads/main/21_Singapore_Hungary_Age_Group.csv"
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}},
  "title": {
    "text": "Population Pyramid Age Distribution",
    "subtitle": [
      "Hungary and Singapore Population Pyramids, 1950-2023",
      "Source: UN Population Division"
    ],
    "fontSize": 16,
    "anchor": "start",
    "subtitleFontSize": 12,
    "subtitleFontWeight": "normal",
    "subtitleFontStyle": "italic"
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1950,
        "max": 2023,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "hconcat": [
    {
      "title": {"text": "Hungary", "fontWeight": "normal", "orient": "bottom"},
      "width": 250,
      "height": 350,
      "transform": [
        {"filter": "datum.ISO3 == 'HUN'"},
        {"calculate": "datum.Population* 1", "as": "Population"},
        {"calculate": "datum.Population", "as": "Population_tooltip"},
        {"calculate": "datum.Age == '100+' ? '>100' : datum.Age", "as": "Age"},
        {"calculate": "datum.Age == '100+' ? '>100' : datum.Age", "as": "Age"},
        {"calculate": "datum.Age == '5-9' ? '05-9' : datum.Age", "as": "Age"},
        {
          "calculate": "datum.Gender == 'Male' ? -datum.Population : datum.Population",
          "as": "Population"
        },
        {"calculate": "toNumber(datum.Year)", "as": "Year"},
        {"filter": "datum.Year == YearSelect"}
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Age",
          "type": "nominal",
          "title": null,
          "sort": "-y",
          "axis": {
            "labelAlign": "center",
            "domain": false,
            "ticks": false,
            "labelFontWeight": "bold",
            "labelAngle": 0,
            "labelColor": {
              "expr": "indexof(['>100', '95-99'  ],datum.label) != -1 ? 'rgba(0,0,0,0)' : 'white'"
            },
            "zindex": 100,
            "offset": -127.5
          }
        },
        "tooltip": [
          {"field": "Age"},
          {"field": "Gender"},
          {
            "field": "Population_tooltip",
            "format": ".2s",
            "title": "Population"
          }
        ],
        "color": {
          "field": "Gender",
          "legend": {
            "values": ["Male", "Female"],
            "orient": "none",
            "legendY": -30,
            "title": null,
            "direction": "horizontal"
          },
          "scale": {"scheme": "dark2"}
        },
        "x": {
          "field": "Population",
          "title": null,
          "type": "quantitative",
          "scale": {"domain": [-425000, 425000]},
          "axis": {
            "tickOpacity": 0,
            "gridOpacity": 0,
            "position": 0,
            "labelExpr": "datum.value < 0 ? format(-datum.value, '.2s') : format(datum.value, '.2s')"
          }
        }
      }
    },
    {
      "title": {"text": "Singapore", "fontWeight": "normal", "orient": "bottom"},
      "width": 250,
      "height": 350,
      "transform": [
        {"filter": "datum.ISO3 == 'SGP'"},
        {"calculate": "datum.Population* 1", "as": "Population"},
        {"calculate": "datum.Population", "as": "Population_tooltip"},
        {"calculate": "datum.Age == '100+' ? '>100' : datum.Age", "as": "Age"},
        {"calculate": "datum.Age == '100+' ? '>100' : datum.Age", "as": "Age"},
        {"calculate": "datum.Age == '5-9' ? '05-9' : datum.Age", "as": "Age"},
        {
          "calculate": "datum.Gender == 'Male' ? -datum.Population : datum.Population",
          "as": "Population"
        },
        {"calculate": "toNumber(datum.Year)", "as": "Year"},
        {"filter": "datum.Year == YearSelect"}
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Age",
          "type": "nominal",
          "title": null,
          "sort": "-y",
          "axis": {
            "labelAlign": "center",
            "domain": false,
            "ticks": false,
            "labelFontWeight": "bold",
            "labelAngle": 0,
            "labelColor": {
              "expr": "indexof(['>100', '95-99'  ],datum.label) != -1 ? 'rgba(0,0,0,0)' : 'white'"
            },
            "zindex": 100,
            "offset": -127.5
          }
        },
        "tooltip": [
          {"field": "Age"},
          {"field": "Gender"},
          {
            "field": "Population_tooltip",
            "format": ".2s",
            "title": "Population"
          }
        ],
        "color": {
          "field": "Gender",
          "legend": {
            "values": ["Male", "Female"],
            "orient": "none",
            "legendY": -20,
            "title": null,
            "direction": "horizontal"
          },
          "scale": {"scheme": "dark2"}
        },
        "x": {
          "field": "Population",
          "title": null,
          "type": "quantitative",
          "scale": {"domain": [-350000, 350000]},
          "axis": {
            "tickOpacity": 0,
            "gridOpacity": 0,
            "position": 0,
            "labelExpr": "datum.value < 0 ? format(-datum.value, '.2s') : format(datum.value, '.2s')"
          }
        }
      }
    }
  ]
}